<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Match Configuration" Height="380" Width="280" ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
         <StackPanel Margin="20">
                <Label FontWeight="Bold">Select Options to Match:</Label>
                
                <CheckBox x:Name="halftone" IsChecked="True">                       Halftone</CheckBox>
                <CheckBox x:Name="transparency" IsChecked="True">                   Transparency</CheckBox>
                <StackPanel Margin="20,0,0,0">
                  <Label FontWeight="Bold">Projection Options:</Label>
                  <CheckBox x:Name="proj_line_color" IsChecked="True">                Projection Line Color</CheckBox>
                  <CheckBox x:Name="proj_line_pattern" IsChecked="True">              Projection Line Pattern</CheckBox>
                  <CheckBox x:Name="proj_line_weight" IsChecked="True">               Projection Line Weight</CheckBox>
                  <CheckBox x:Name="proj_fill_color" IsChecked="True">                Projection Fill Color</CheckBox>
                  <CheckBox x:Name="proj_fill_pattern" IsChecked="True">              Projection Fill Pattern</CheckBox>
                  <CheckBox x:Name="proj_fill_pattern_visibility" IsChecked="True">   Projection Fill Pattern Visibility</CheckBox>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                  <Label FontWeight="Bold">Cut Options:</Label>
                  <CheckBox x:Name="cut_line_color" IsChecked="True">                 Cut Line Color</CheckBox>
                  <CheckBox x:Name="cut_line_pattern" IsChecked="True">               Cut Line Pattern</CheckBox>
                  <CheckBox x:Name="cut_line_weight" IsChecked="True">                Cut Line Weight</CheckBox>
                  <CheckBox x:Name="cut_fill_color" IsChecked="True">                 Cut Fill Color</CheckBox>
                  <CheckBox x:Name="cut_fill_pattern" IsChecked="True">               Cut Fill Pattern</CheckBox>
                  <CheckBox x:Name="cut_fill_pattern_visibility" IsChecked="True">    Cut Fill Pattern Visibility</CheckBox>
                </StackPanel>
        </StackPanel>
</Window>
