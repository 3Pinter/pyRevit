<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Packages"
        Height="600" Width="1200"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Center">
    <Window.Resources>
        <SolidColorBrush x:Key="GridColor" Color="#dedede"/>

        <Style x:Key="CreatedSymbol" TargetType="{x:Type Polygon}">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Points" Value="0,0 15,0 15,15 0,15 0,0" />
        </Style>

        <Style x:Key="IssuedSymbol" TargetType="{x:Type Polygon}">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Points" Value="0,10 4,6 6,8 12,1 16,6 6,16 0,10" />
        </Style>

        <Style x:Key="UpdatedSymbol" TargetType="{x:Type Polygon}">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Points" Value="0,0 4,0 4,12 12,12 12,0 16,0 16,16 0,16 0,0" />
        </Style>

        <Style x:Key="RevisedSymbol" TargetType="{x:Type Polygon}">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Points" Value="0,10 4,6 6,8 12,1 16,6 6,16 0,10" />
        </Style>

        <Style x:Key="DeletedSymbol" TargetType="{x:Type Polygon}">
            <Setter Property="Fill" Value="Black" />
            <Setter Property="Points" Value="0,10 4,6 6,8 12,1 16,6 6,16 0,10" />
        </Style>
    </Window.Resources>
    <DockPanel Margin="10">
        <DockPanel DockPanel.Dock="Right" Margin="10,0,10,0">
            <GroupBox Header="Legend" DockPanel.Dock="Bottom" Height="150"/>
            <StackPanel>
                <Button Content="Update Sheets"
                        Margin="0,0,0,10"
                        Padding="8,4,8,4"
                        ToolTip="" />
            </StackPanel>
        </DockPanel>
        <DataGrid x:Name="sheets_dg"
                  AutoGenerateColumns="False"
                  BorderThickness="1"
                  RowHeaderWidth="0"
                  FrozenColumnCount="2"
                  CanUserSortColumns="True"
                  GridLinesVisibility="None"
                  CanUserReorderColumns="False"
                  HorizontalGridLinesBrush="{StaticResource GridColor}"
                  VerticalGridLinesBrush="{StaticResource GridColor}">
            <DataGrid.Resources>
                <Style x:Key="DoubleLeftBorderCell" TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="{StaticResource GridColor}"/>
                </Style>

                <Style x:Key="PackageCellStyle" TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridCell}">
                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}"
                                        SnapsToDevicePixels="True"
                                        Height="24">
                                    <!--<ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>-->
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Rectangle Grid.Column="0" Visibility="{Binding package.hasbefore}" Height="2" Width="Auto" Fill="LightGray" SnapsToDevicePixels="True"/>
                                            <Rectangle Grid.Column="1" Visibility="{Binding package.hasafter}" Height="2" Width="Auto" Fill="LightGray" SnapsToDevicePixels="True"/>
                                        </Grid>
                                        <Polygon x:Name="committypeshape" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding package.committype}" Value="created">
                                        <Setter TargetName="committypeshape" Property="Style" Value="{StaticResource CreatedSymbol}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding package.committype}" Value="issued">
                                        <Setter TargetName="committypeshape" Property="Style" Value="{StaticResource IssuedSymbol}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding package.committype}" Value="updated">
                                        <Setter TargetName="committypeshape" Property="Style" Value="{StaticResource UpdatedSymbol}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding package.committype}" Value="revised">
                                        <Setter TargetName="committypeshape" Property="Style" Value="{StaticResource RevisedSymbol}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding package.committype}" Value="deleted">
                                        <Setter TargetName="committypeshape" Property="Style" Value="{StaticResource DeletedSymbol}"/>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static DataGrid.FocusBorderBrushKey}}"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="true"/>
                                <Condition Property="Selector.IsSelectionActive" Value="false"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}"/>
                        </MultiTrigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding number}" MinWidth="50" Width="Auto" IsReadOnly="True">
                    <DataGridTextColumn.Header>
                        <TextBlock><Run Text="Sheet"/><LineBreak/><Run Text="Number"/></TextBlock>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding name}" MinWidth="50" Width="Auto" IsReadOnly="True" CellStyle="{StaticResource DoubleLeftBorderCell}">
                    <DataGridTextColumn.Header>
                        <TextBlock><Run Text="Sheet"/><LineBreak/><Run Text="Name"/></TextBlock>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Package 1" MinWidth="100" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Package 2" MinWidth="100" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Package 3" MinWidth="100" Width="100" IsReadOnly="True" CellStyle="{StaticResource PackageCellStyle}"/>
                <DataGridTextColumn Header="Package 4" MinWidth="100" Width="100" IsReadOnly="True" CellStyle="{StaticResource PackageCellStyle}"/>
                <DataGridTextColumn Header="Revision 1" MinWidth="100" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Revision 2" MinWidth="100" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Revision 2" MinWidth="100" Width="100" IsReadOnly="True" />
                <DataGridTextColumn Header="Revision 2" MinWidth="100" Width="100" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
