<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Packages" Height="500" Width="900" ShowInTaskbar="False" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen" HorizontalContentAlignment="Center">
    <DockPanel Margin="10">
        <DockPanel DockPanel.Dock="Right" Margin="10,0,10,0">
            <GroupBox Header="Legend" DockPanel.Dock="Bottom" Height="150"/>
            <StackPanel>
                <Button Content="Update Sheets"
                        Margin="0,0,0,10"
                        Padding="8,4,8,4"
                        ToolTip="" />
            </StackPanel>
        </DockPanel>
        <DataGrid x:Name="sheets_dg"
                  AutoGenerateColumns="False"
                  BorderThickness="1"
                  RowHeaderWidth="0"
                  FrozenColumnCount="2"
                  CanUserSortColumns="True"
                  HorizontalScrollBarVisibility="Visible"
                  HorizontalGridLinesBrush="#dedede"
                  VerticalGridLinesBrush="#dedede">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sheet Number" Binding="{Binding number}" MinWidth="100" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Sheet Name" Binding="{Binding name}" MinWidth="100" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Package 1" MinWidth="100" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Package 2" MinWidth="100" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Package 3" MinWidth="100" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Package 4" MinWidth="100" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Revision 1" MinWidth="100" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Revision 2" MinWidth="100" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
