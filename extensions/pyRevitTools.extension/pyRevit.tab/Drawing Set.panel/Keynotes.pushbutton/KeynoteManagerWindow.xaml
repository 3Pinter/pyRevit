<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False"
        Width="800" Height="600"
        MinWidth="600" MinHeight="435"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Center"
        Title="Manage Keynotes">
    <Window.Resources>
        <Style x:Key="ClearButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    <DockPanel Margin="10">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="1" Margin="0,0,0,0">
                <TextBlock Text="Filter:"
                           VerticalAlignment="Center"
                           FontSize="14" DockPanel.Dock="Left"
                           Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBox x:Name="search_tb" Height="25px"
                             TextChanged="search_txt_changed" VerticalContentAlignment="Center"/>
                    <Button Style="{StaticResource ClearButton}"
                            HorizontalAlignment="Right"
                            x:Name="clrsearch_b" Content="x"
                            Margin="0,-25,5,0" Padding="0,-4,0,0"
                            Click="clear_search"
                            Width="15px" Height="15px"/>
                </StackPanel>
            </DockPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <TreeView x:Name="keynotes_tv" Margin="0,10,10,0" Grid.Column="0">
                <TreeView.Items>
                    <TreeViewItem Header="A0 Architecture" IsExpanded="True">
                        <TreeViewItem Header="A001 Example Keynote" />
                        <TreeViewItem Header="A002 Example Keynote" />
                        <TreeViewItem Header="A003 Example Keynote" />
                    </TreeViewItem>
                    <TreeViewItem Header="S0 Structure" IsExpanded="True">
                        <TreeViewItem Header="S001 Example Keynote" />
                        <TreeViewItem Header="S002 Example Keynote" />
                        <TreeViewItem Header="S003 Example Keynote" />
                    </TreeViewItem>
                    <TreeViewItem Header="C0 Civil" IsExpanded="True">
                        <TreeViewItem Header="C001 Example Keynote" />
                        <TreeViewItem Header="C002 Example Keynote" />
                        <TreeViewItem Header="C003 Example Keynote" />
                    </TreeViewItem>
                </TreeView.Items>
            </TreeView>
            <DockPanel Grid.Column="1" Margin="0,5,0,0">
                <StackPanel DockPanel.Dock="Bottom">
                    <Button Content="Import Keynotes"
                            Margin="0,15,0,0"
                            Padding="8,4,8,4"
                            ToolTip = "Creates a Rule-based filter and inverse filter for selected tags."
                            IsEnabled="False"/>
                    <Button Content="Export Keynotes"
                            Margin="0,5,0,0"
                            Padding="8,4,8,4"
                            ToolTip = "Creates a Rule-based filter and inverse filter for selected tags."
                            IsEnabled="False"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <Button Content="Update Keynotes"
                            Padding="8,4,8,4"
                            ToolTip="Selects the Revit elements associated with this tag."
                            IsEnabled="False"/>
                    <GroupBox Header="Keynotes" Margin="0,15,0,0" Padding="5">
                        <StackPanel>
                            <Button Content="Add Category"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip = "Select the tag, enter the new name in&#xA;the box below the list and hit Rename Tag."
                                    IsEnabled="False"/>
                            <Button Content="Add Keynote"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip = "Select the tag, enter the new name in&#xA;the box below the list and hit Rename Tag."
                                    IsEnabled="False"/>
                            <Button Content="Add Child Keynote"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip = "Select the tag, enter the new name in&#xA;the box below the list and hit Rename Tag."
                                    IsEnabled="False"/>
                            <Button Content="Edit"
                                    Margin="0,15,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip = "Select the tag, enter the new name in&#xA;the box below the list and hit Rename Tag."
                                    IsEnabled="False"/>
                            <Button Content="Merge"
                                    Margin="0,15,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip = "Select the tag, enter the new name in&#xA;the box below the list and hit Rename Tag."
                                    IsEnabled="False"/>
                            <Button Content="Remove"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip="Removes Tag from elements. Does not delete the elements."
                                    IsEnabled="False"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Keynotes History" Margin="0,15,0,0" Padding="5">
                        <StackPanel>
                            <Button Content="Show History"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip="Removes Tag from elements. Does not delete the elements."
                                    IsEnabled="False"/>
                            <Button Content="Clear History"
                                    Margin="0,5,0,0"
                                    Padding="8,4,8,4"
                                    ToolTip="Removes Tag from elements. Does not delete the elements."
                                    IsEnabled="False"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
